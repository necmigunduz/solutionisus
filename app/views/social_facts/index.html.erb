<p id="notice"><%= notice %></p>

<h1>Social Facts</h1>

<table>
  <thead>
    <tr>
      <th>Social fact title</th>
      <th>Social fact definition</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @social_facts.each do |social_fact| %>
      <tr>
        <td><%= social_fact.social_fact_title %></td>
        <td><%= social_fact.social_fact_definition %></td>
        <td><%= link_to 'Show', social_fact %></td>
        <td><%= link_to 'Edit', edit_social_fact_path(social_fact) %></td>
        <td><%= link_to 'Destroy', social_fact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Social Fact', new_social_fact_path %>
