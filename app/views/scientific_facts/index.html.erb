<p id="notice"><%= notice %></p>

<h1>Scientific Facts</h1>

<table>
  <thead>
    <tr>
      <th>Scientific fact title</th>
      <th>Scienctific fact definition</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scientific_facts.each do |scientific_fact| %>
      <tr>
        <td><%= scientific_fact.scientific_fact_title %></td>
        <td><%= scientific_fact.scienctific_fact_definition %></td>
        <td><%= link_to 'Show', scientific_fact %></td>
        <td><%= link_to 'Edit', edit_scientific_fact_path(scientific_fact) %></td>
        <td><%= link_to 'Destroy', scientific_fact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

