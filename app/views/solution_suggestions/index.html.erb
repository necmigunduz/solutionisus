<p id="notice"><%= notice %></p>

<h1>Solution Suggestions</h1>

<table>
  <thead>
    <tr>
      <th>Problem</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @solution_suggestions.each do |solution_suggestion| %>
      <tr>
        <td><%= solution_suggestion.problem_id %></td>
        <td><%= solution_suggestion.user_id %></td>
        <td><%= link_to 'Show', solution_suggestion %></td>
        <td><%= link_to 'Edit', edit_solution_suggestion_path(solution_suggestion) %></td>
        <td><%= link_to 'Destroy', solution_suggestion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

